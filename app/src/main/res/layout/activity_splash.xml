<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/splash"
    tools:context=".splashActivity">

    <!--android:layout_alignParentBottom="true"在父控件的下方-->
    <!--        android:layout_centerHorizontal="true"水平居中-->
    <!--        android:layout_marginBottom="20dp"距离底部多远
            android:shadowColor="#00FF00" 阴影的颜色
                    android:shadowDx="1" 阴影的偏移量
                   android:shadowRadius="2" 阴影偏移角度
-->

    <TextView
        android:id="@+id/splash_tv_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="版本:1.0"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:shadowColor="#00FF00"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"

         />

</RelativeLayout>